# GitHub App configuration
GITHUB_APP_ID=123456
GITHUB_APP_INSTALLATION_ID=987654
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
...
-----END RSA PRIVATE KEY-----"
GITHUB_ORG=your-org-name

# Entra ID configuration
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Alerting configuration
ALERT_EMAIL_URL="https://your-alert-endpoint"
ALERT_EMAIL_RECIPIENT="alerts@example.com"

# Read-all team permissions (optional)
READALL_TEAM=all
READALL_IGNORE_REPOS=secret-repo,another-private-repo
READALL_IGNORE_PREFIXES=supersecure-,internal-

# PIM Owner sync configuration
PIM_OWNERS_GROUP=github_pim_owners
PIM_STATE_FILE=/data/pim_state.db
PIM_NOTIFY_USERS=true
PIM_ALLOW_EMPTY_GROUP=false  # Set to true to allow demoting all promoted users when PIM group is empty
PIM_NEVER_DEMOTE=break-glass-admin,emergency-account  # Comma-separated list of GitHub usernames to never demote (extra safety)
